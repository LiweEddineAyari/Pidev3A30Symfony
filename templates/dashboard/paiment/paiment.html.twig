{% if statisticsData %}
<script>
    (function(window, document, $, undefined) {
        "use strict";

        $(function() {
            // Check if the chart element exists
            if ($('#chartjs_doughnut').length) {
                var ctx = document.getElementById("chartjs_doughnut").getContext('2d');

                // Define the dynamic data from your Twig template
                var labels = [];
                var data = [];
                {% for item in statisticsData %}
                    labels.push("{{ item.month }}");
                    data.push({{ item.income }});
                {% endfor %}

                var myChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: labels,
                        datasets: [{
                            backgroundColor: [
                                "#5969ff",
                                "#ff407b",
                                "#25d5f2",
                                "#ffc750",
                                "#2ec551",
                                "#7040fa",
                                "#ff004e",
                                "#5969ff",
                                "#ff407b",
                                "#25d5f2",
                                "#ffc750",
                                "#2ec551",
                            ],
                            data: data
                        }]
                    },
                    options: {
                        legend: {
                            display: true,
                            position: 'bottom',
                            labels: {
                                fontColor: '#71748d',
                                fontFamily: 'Circular Std Book',
                                fontSize: 14,
                            }
                        },
                    }
                });
            }
        });

    })(window, document, window.jQuery);
</script>
{% endif %}



