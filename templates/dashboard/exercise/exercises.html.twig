{% extends 'baseBack.html.twig' %}

        {% block title %}
          Exercises
        {% endblock %}
{% block dashboard_wrapper %}
           <style>
            .table-responsive{
                overflow-y:auto;
                max-height:650px;  
            }
            .modal{
                    position:fixed;
                    top:15%;
                    left:40%;
                    z-index:1050;
                    display:none;
                    overflow:hidden;
                    outline:0
                }
                .button-container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100%; /* Ensure button container takes full height */
                }

                .button-group {
                    display: flex;
                    gap: 10px; /* Adjust as needed */
                }

           </style>
           <script>
                document.getElementById('cancelBtn').addEventListener('click', function() {
                    window.location.href = '{{ path('productsPage') }}'; // Replace 'productsPage' with the actual route name for your product page
                });
            </script>
            {% if modify %}
                <script>
                    $(document).ready(function() {
                        $('#addProductModal').modal('show'); // Show the modal when modify is true
                    });
                </script>
            {% endif %}

            {% if satisticsdata %}
                <script>
                    (function(window, document, $, undefined) {
                        "use strict";

                        $(function() {
                            // Check if the chart element exists
                            if ($('#chartjs_doughnut').length) {
                                var ctx = document.getElementById("chartjs_doughnut").getContext('2d');

                                // Define the dynamic data from your Twig template
                                var labels = [];
                                var data = [];
                                {% for item in satisticsdata %}
                                    labels.push("{{ item.type }}");
                                    data.push({{ item.score }});
                                {% endfor %}

                                var myChart = new Chart(ctx, {
                                    type: 'doughnut',
                                    data: {
                                        labels: labels,
                                        datasets: [{
                                            backgroundColor: [
                                                "#5969ff",
                                                "#ff407b",
                                                "#25d5f2",
                                                "#ffc750",
                                                "#2ec551",
                                                "#7040fa",
                                                "#ff004e"
                                            ],
                                            data: data
                                        }]
                                    },
                                    options: {
                                        legend: {
                                            display: true,
                                            position: 'bottom',
                                            labels: {
                                                fontColor: '#71748d',
                                                fontFamily: 'Circular Std Book',
                                                fontSize: 14,
                                            }
                                        },
                                    }
                                });
                            }
                        });

                    })(window, document, window.jQuery);
                </script>
            {% endif %}


           <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">          
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Exercises Page</h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="" class="breadcrumb-link">Gestion Exercises</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Exercises</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ecommerce-widget">
                        <div class="row">
                            <div class="col-xl-9 col-lg-12 col-md-6 col-sm-12 col-12">
                                <div class="card">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h5 class="card-header">Our Exercises</h5>
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-success m-r-10 " id="popupStatisticsBtn" data-toggle="modal" data-target="#StatisticsModal">
                                                Statistics
                                            </button>                                       
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-primary m-r-10" id="popupAddBtn" data-toggle="modal" data-target="#addProductModal">
                                                <i class="fas fa-plus-circle"></i> Add Exercise
                                            </button>                                       
                                         </div>
                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        <th class="border-0">Id</th>
                                                        <th class="border-0">Image</th>
                                                        <th class="border-0">Name</th>
                                                        <th class="border-0">Product Name</th>
                                                        <th class="border-0">Target</th>
                                                        <th class="border-0">Type</th>
                                                        <th class="border-0">Intensity</th>
                                                        <th class="border-0">EquipmentNeeded</th>
                                                        <th class="border-0">Description</th>
                                                        <th class="border-0">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for exercise in exercises %}
                                                         {% if exercise.id != -1 %}
                                                            <tr>
                                                                <td>{{ exercise.id }}</td>
                                                                <td>
                                                                    <div class="m-r-10"><img src="{{ asset('assets/images/' ~ exercise.img) }}" alt="user" class="rounded" width="45"></div>
                                                                </td>
                                                                <td>{{ exercise.name }}</td>
                                                                <td>{{ exercise.product }}</td>
                                                                <td>{{ exercise.target }}</td>
                                                                <td>{{ exercise.type }}</td>
                                                                <td>{{ exercise.Intensity }}</td>
                                                                <td>{{ exercise.equipmentneeded }}</td>
                                                                <td>{{ exercise.description }}</td>
                                                                <td class="button-container">
                                                                    <div class="button-group">
                                                                        <a href="{{ path('save_exercise', {id: exercise.id}) }}" class="btn btn-rounded btn-warning">Edit</a>
                                                                        <a href="{{ path('delete_exercise', {id: exercise.id}) }}" class="btn btn-rounded btn-danger">Delete</a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                         {% endif %}
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>     
                            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12 col-12">
                                <div class="product-sidebar">
                                    <div class="product-sidebar-widget">
                                        <h4 class="mb-0">Filter</h4>
                                    </div>
                                    <form method="post" action="{{ path('filtre_exercises') }}">
                                        <div class="product-sidebar-widget">
                                            <h4 class="product-sidebar-widget-title">Target</h4>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="target-1" name="target" value="Chest">
                                                <label class="custom-control-label" for="target-1">Chest</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="target-2" name="target" value="Back">
                                                <label class="custom-control-label" for="target-2">Back</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="target-3" name="target" value="Shoulder">
                                                <label class="custom-control-label" for="target-3">Shoulder</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="target-4" name="target" value="Leg">
                                                <label class="custom-control-label" for="target-4">Leg</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="target-5" name="target" value="Arm">
                                                <label class="custom-control-label" for="target-5">Arm</label>
                                            </div>
                                        </div>
                                        <div class="product-sidebar-widget">
                                            <h4 class="product-sidebar-widget-title">Type</h4>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="type-1" name="type" value="Growth">
                                                <label class="custom-control-label" for="type-1">Growth</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="type-2" name="type" value="Strength">
                                                <label class="custom-control-label" for="type-2">Strength</label>
                                            </div>
                                            <div class="custom-control custom-radio">
                                                <input type="radio" class="custom-control-input" id="type-3" name="type" value="Cardio">
                                                <label class="custom-control-label" for="type-3">Cardio</label>
                                            </div>
                                        </div>

                                        <div class="product-sidebar-widget">
                                            <button type="submit" class="btn btn-outline-light">Reset Filter</button>
                                        </div>
                                    </form>

                                </div>
                            </div>             
                        </div>
                            <div class="card modal fade" id="addProductModal"style="width: 450px; height: 750px;" >
                                <div class="card-header">
                                    Add New Exercise
                                </div>
                                <div class="card-body">
                                    <form method="post" action="{{ exercise ? path('save_exercise', {id: exercise.id}) : path('save_exercise') }}" enctype="multipart/form-data">
                                        {{ form_start(form) }}
                                            <div class="form-group">
                                                {{ form_row(form.product) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.name) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.target) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.type) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.description) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.img) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.intensity) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.equipmentneeded) }}
                                            </div>
                                            <br/>
                                            <div class="row form-group">
                                                <div class="col">
                                                    {{ form_row(form.save) }}
                                                </div>
                                                <div class="col">
                                                    <a href="{{ path('exercisePage')}}" class="btn btn-rounded btn-warning">Cancel</a>
                                                </div>
                                            </div>
                                        {{ form_end(form) }}
                                    </form>
                                </div>

                            </div> 
                            <div class="card modal fade" id="StatisticsModal" style="width: 550px; height: 400px;">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="card-header">Doughnut Statistics| Number of Likes By Each Type  </h5>
                                    </div>               
                                    <div class="col-auto">                                           
                                        <a href="{{ path('exercisePage')}}" class="btn btn-rounded btn-danger"> <i class="fas fa-times"></i></a>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <canvas id="chartjs_doughnut"></canvas>
                                </div>
                            </div>                          
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                             Copyright © 2018 Concept. All rights reserved. Dashboard by <a href="https://colorlib.com/wp/">Colorlib</a>.
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                <a href="javascript: void(0);">About</a>
                                <a href="javascript: void(0);">Support</a>
                                <a href="javascript: void(0);">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
          </div>
{% endblock %}
