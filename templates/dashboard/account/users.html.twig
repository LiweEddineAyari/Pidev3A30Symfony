{% extends 'baseBack.html.twig' %}

        {% block title %}
          Users 
        {% endblock %}
{% block dashboard_wrapper %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function() {
            // you may need to change this code if you are not using Bootstrap Datepicker
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>
           <style>
            .table-responsive{
                overflow-y:auto;
                max-height:650px;  
            }
            .modal{
                    position:fixed;
                    top:15%;
                    left:40%;
                    z-index:1050;
                    display:none;
                    overflow:hidden;
                    outline:0
                }
                .button-container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100%; /* Ensure button container takes full height */
                }

                .button-group {
                    display: flex;
                    gap: 10px; /* Adjust as needed */
                }

           </style>
           <script>
                document.getElementById('cancelBtn').addEventListener('click', function() {
                    window.location.href = '{{ path('productsPage') }}'; // Replace 'productsPage' with the actual route name for your product page
                });
                 document.getElementById('popupBanBtn').addEventListener('click', function() {
                    $(document).ready(function() {
                        $('#addNewMemberModal').modal('show'); // Show the modal when modify is true
                    });
                });
                document.getElementById('popupStatisticsBtn').addEventListener('click', function() {
                    $(document).ready(function() {
                        $('#StatisticsModal').modal('show'); // Show the modal when modify is true
                    });
                });
            </script>
            {% if modify %}
                <script>
                    $(document).ready(function() {
                        $('#addProductModal').modal('show'); // Show the modal when modify is true
                    });
                </script>
            {% endif %}




           <div class="dashboard-wrapper">
            <div class="dashboard-ecommerce">
                <div class="container-fluid dashboard-content ">          
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Users Page</h2>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="" class="breadcrumb-link">Gestion Users</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Users</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="ecommerce-widget">
                        <div class="row">
                            <div class="col-xl-9 col-lg-12 col-md-6 col-sm-12 col-12">
                                <div class="card">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h5 class="card-header">Our Users</h5>
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-primary m-r-10" id="popupAddBtn" data-toggle="modal" data-target="#addProductModal">
                                                <i class="fas fa-plus-circle"></i> 
                                            </button>                                       
                                        </div>

                                    </div>
                                    <div class="card-body p-0">
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        <th class="border-0">Id</th>
                                                        <th class="border-0">name</th>
                                                        <th class="border-0">prenom</th>
                                                        <th class="border-0">age</th>
                                                        <th class="border-0">mail</th>
                                                        <th class="border-0">motpasse</th>
                                                        <th class="border-0">title</th>
                                                        <th class="border-0">phonenumber</th>                                                        
                                                        <th class="border-0">Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for user in users %}
                                                             <tr>
                                                                <td>{{ user.id }}</td>
                                                                <td>{{ user.name  }}</td>
                                                                <td>{{ user.prenom }}</td>
                                                                <td>{{ user.age }}</td>
                                                                <td>{{ user.mail }}</td>
                                                                <td>{{ user.motpasse }}</td>
                                                                <td>{{ user.title }}</td>
                                                                <td>{{ user.phonenumber }}</td>
                                                                <td class="button-container">
                                                                    <div class="button-group">
                                                                        <a href="{{ path('save_user', {id: user.id}) }}" class="btn btn-rounded btn-warning">Edit</a>
                                                                        <a href="{{ path('delete_user', {id: user.id}) }}" class="btn btn-rounded btn-danger">Delete</a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>               
                        </div>
                            <div class="card modal fade" id="addProductModal"style="width: 550px; height: 650px;" >
                                <div class="card-header">
                                    Add New User
                                </div>
                                <div class="card-body">
                                    <form method="post" action="{{ user ? path('save_user', {id: user.id}) : path('save_user') }}" enctype="multipart/form-data">
                                        {{ form_start(form) }}
                                            <div class="form-group">
                                                {{ form_row(form.name) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.prenom) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.age) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.mail) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.motpasse) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.title) }}
                                            </div>
                                            <div class="form-group">
                                                {{ form_row(form.phonenumber) }}
                                            </div>                                                                                        
                                            <div class="row form-group">
                                                <div class="col">
                                                    {{ form_row(form.save) }}
                                                </div>
                                                <div class="col">
                                                    <a href="{{ path('usersPage')}}" class="btn btn-rounded btn-warning">Cancel</a>
                                                </div>
                                            </div>
                                        {{ form_end(form) }}
                                    </form>
                                </div>
                            </div>                    
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                             Copyright © 2018 Concept. All rights reserved. Dashboard by <a href="https://colorlib.com/wp/">Colorlib</a>.
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                <a href="javascript: void(0);">About</a>
                                <a href="javascript: void(0);">Support</a>
                                <a href="javascript: void(0);">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
          </div>
{% endblock %}
